{
    "$schema": "https://www.krakend.io/schema/v2.5/krakend.json",
    "version": 3,
    "name": "Yinflow Gateway",
    "port": 8080,
    "cache_ttl": "3600s",
    "use_h2c": true,
    "timeout": "5s",
    "extra_config": {
        "router": {
            "return_error_msg": true
        },
        "security/cors": {
            "allow_origins": [
                "*"
            ],
            "allow_methods": [
                "GET",
                "POST"
            ],
            "allow_headers": [
                "Content-Type",
                "Authorization"
            ]
        }
    },
    "endpoints": [
        {
            "endpoint": "/items/pro_professionals",
            "method": "GET",
            "output_encoding": "json",
            "backend": [
                {
                    "host": [
                        "http://directus.railway.internal"
                    ],
                    "url_pattern": "/items/pro_professionals",
                    "extra_config": {
                        "proxy": {
                            "headers": {
                                "Authorization": "{{ env DIRECTUS_API_KEY }}"
                            }
                        }
                    }
                }
            ]
        }
    ]
}