{
    "$schema": "https://www.krakend.io/schema/v2.5/krakend.json",
    "version": 3,
    "name": "Yinflow Gateway",
    "port": 8080,
    "cache_ttl": "3600s",
    "use_h2c": true,
    "timeout": "5s",
    "output_encoding": "json",
    "input_headers": [
      "Authorization",
      "X-API-KEY"
    ],
    "extra_config": {
        "security/cors": {
            "allow_origins": [
                "*"
            ],
            "allow_methods": [
                "GET",
                "POST"
            ],
            "allow_headers": [
                "Content-Type",
                "Authorization",
                "X-API-KEY"
            ]
        },
        "modifier/lua-endpoint": {
            "pre": "local c = ctx.load(); c:headers('Authorization', 'Bearer {{ env "DIRECTUS_API_KEY" }}');"
        }
    },
    "endpoints": [
      {
          "endpoint": "/items/pro_professionals",
          "method": "GET",
          "backend": [
              {
                  "host": [
                      "{{ env "DIRECTUS_BASE_URL" }}"
                  ],
                  "url_pattern": "/items/pro_professionals"
              }
          ]
      }
  ]
}