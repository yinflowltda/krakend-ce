{
    "$schema": "https://www.krakend.io/schema/v2.5/krakend.json",
    "version": 3,
    "name": "Yinflow Gateway",
    "port": 8080,
    "cache_ttl": "3600s",
    "use_h2c": true,
    "timeout": "5s",
    "output_encoding": "json",
    "host": [ 
      "{{ env "DIRECTUS_BASE_URL" }}"
    ],
    "input_headers": [
      "Authorization",
      "X-API-KEY"
    ],
    "extra_config": {
        "security/cors": {
            "allow_origins": [
                "*"
            ],
            "allow_methods": [
                "GET",
                "POST"
            ],
            "allow_headers": [
                "Content-Type",
                "Authorization",
                "X-API-KEY"
            ]
        },
        "modifier/lua-endpoint": {
            "pre": "local c = ctx.load(); local x_api_key = c:headers('X-API-KEY'); if x_api_key != {{ env "KRAKEND_API_KEY" }} then return 403 end;"
        }
    },
    "endpoints": [
      {
          "endpoint": "/items/pro_professionals",
          "method": "GET",
          "backend": [
              {
                  "url_pattern": "/items/pro_professionals",
                  "extra_config": {
                    "modifier/martian": {
                      "header.Append": {
                        "scope": [
                          "request", "response"
                        ],
                        "name": "Authorization",
                        "value": "Bearer {{ env "DIRECTUS_API_KEY" }}"
                      }
                    }
                  }
              }
          ]
      }
  ]
}